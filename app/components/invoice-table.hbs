<UkCard @size="large" as |head|>
  <head.header>
    <UkButton type="button" @color="primary" @on-click={{this.transferHandler}}>
      Transfer
    </UkButton> 
    <UkButton type="button"  @color="primary" @on-click={{this.reconcileHandler}}>
      Reconcile
    </UkButton> 
    <UkButton type="button"  @color="primary" @on-click={{this.searchHandler}}>
      Find
    </UkButton> 
    <label>show: </label>
    <UkButton type="button"  @color="secondary" @on-click={{this.changeTransferIndicator}}>
      Transfered
    </UkButton> 
    <UkButton type="button"  @color="secondary" @on-click={{this.changeNotTransferIndicator}}>
      Not Transfered
    </UkButton> 
    <UkButton type="button" @color="secondary" @on-click={{this.changeNotReconcileIndicator}}>
      Not Reconciled
    </UkButton> 
    <UkButton type="button" @color="secondary" @on-click={{this.changeAllIndicator}}>
      All
    </UkButton> 
  </head.header>

<card.body>
  <div>
    <EmberTable as |t|>
      <t.head 
      @columns={{this.columns}} 
      @sorts={{this.sorts}}
      @onUpdateSorts={{action (mut this.sorts)}}
      as |h| >
          <h.row  as |r|>
            <r.cell as |column|>
                  {{column.name}}
            </r.cell>
          </h.row>
      </t.head>

      <t.body 
      @rows={{this.rows}}
      @onSelect={{action (mut this.selection)}}
      @selection={{this.selection}}
      as |b|>
          <b.row 
          as |r|>
            <r.cell as |value|>
            {{value}}
            </r.cell>
          </b.row>
      </t.body>
    </EmberTable>
  </div>
</card.body>

<card.footer>
  <div>
    <UkButton type="button"  @color="primary" @on-click={{this.connectQB}}>
      Connect to Quickbooks
    </UkButton> 
    <UkButton type="button"  @color="primary" @on-click={{this.connectXero}}>
      Connect to Xero
    </UkButton> 
  </div>
</card.footer>
</UkCard>